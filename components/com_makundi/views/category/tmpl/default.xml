<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_MAKUNDI_CATEGORY_VIEW_DEFAULT_TITLE">
		<message>
            <![CDATA[COM_MAKUNDI_CATEGORY_VIEW_DEFAULT_DESC]]>
		</message>
	</layout>
	<fields name="request" addfieldpath="administrator/components/com_makundi/fields">
		<fieldset name="request">
			<field
					name="id"
					type="categorylist"
					label="Category"
					description="Select the category to display"
					/>
		</fieldset>
	</fields>

    <fields name="params">
        <!-- Basic options. -->
        <fieldset name="basic"
                  label="COM_MAKUNDI_ATTRIBS_CATEGORY_SETTINGS_LABEL">
            <field
                    name="show_subcategories"
                    type="radio"
                    class="btn-group"
                    label="COM_MAKUNDI_SUBCATEGORIES_LABEL"
                    description="COM_MAKUNDI_SHOW_SUBCATEGORIES_DESC"
                    default="0">
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                    name="columns"
                    type="text"
                    label="COM_MAKUNDI_COLUMNS_LABEL"
                    description="COM_MAKUNDI_COLUMNS_DESC"
                    default="4" />
            <field
                    name="limit"
                    type="text"
                    default="4"
                    label="COM_MAKUNDI_LIMIT_LABEL"
                    description="COM_MAKUNDI_LIMIT_DESC" />

            <field
                    name="show_description"
                    type="radio"
                    class="btn-group"
                    label="COM_MAKUNDI_SHOW_DESC_LABEL"
                    description="COM_MAKUNDI_SHOW_DESCRIPTION_DESC"
                    default="0">
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
            <field
                    name="show_articles"
                    type="radio"
                    class="btn-group"
                    label="COM_MAKUNDI_SHOW_ARTICLES_LABEL"
                    description="COM_MAKUNDI_SHOW_ARTICLES_DESC"
                    default="1">
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>
        </fieldset>
    </fields>
</metadata>