<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0.0" method="upgrade" overwrite="true">
    <name>Makundi</name>
    <identifier>com:translations</identifier>
    <author>Moyo Web Architects</author>
    <creationDate>January 2014</creationDate>
    <copyright>Copyright (C) 2013 Moyo Web Architects and Contributors. (http://www.moyoweb.nl)</copyright>
    <license>GNU GPLv3 - http://www.gnu.org/licenses/gpl.html</license>
    <authorEmail>info@moyoweb.nl</authorEmail>
    <authorUrl>www.moyoweb.nl</authorUrl>
    <version>1.2.12</version>
    <description>Makundi</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">install/install.sql</file>
        </sql>
    </install>

    <administration>
        <files folder="administrator/components/com_makundi">
            <file>access.xml</file>
            <file>config.xml</file>
            <file>dispatcher.php</file>
            <file>makundi.php</file>

            <folder>commands</folder>
            <folder>databases</folder>
            <folder>fields</folder>
            <folder>install</folder>
            <folder>language</folder>
            <folder>models</folder>
            <folder>objects</folder>
            <folder>templates</folder>
            <folder>views</folder>
        </files>

        <languages folder="administrator/components/com_makundi">
            <language tag="en-GB">language/en-GB/en-GB.com_makundi.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_makundi.ini</language>
        </languages>

        <menu>COM_MAKUNDI</menu>
    </administration>

    <files folder="components/com_makundi">
        <file>dispatcher.php</file>
        <file>makundi.php</file>
        <file>router.php</file>

        <folder>commands</folder>
        <folder>controllers</folder>
        <folder>databases</folder>
        <folder>fields</folder>
        <folder>forms</folder>
        <folder>install</folder>
        <folder>language</folder>
        <folder>models</folder>
        <folder>objects</folder>
        <folder>templates</folder>
        <folder>views</folder>
    </files>
</extension>
